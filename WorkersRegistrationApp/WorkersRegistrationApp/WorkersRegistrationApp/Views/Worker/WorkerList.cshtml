@model IEnumerable<WorkersRegistrationApp.Domain.Worker>
@{
    ViewBag.Title = "WorkerList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Workers</h2>
<p>
    @Html.ActionLink("Add worker", "Create")
</p>
<table class="table-bordered tabl">
    <tr>
        <th>Name</th>
        <th>Middle Name</th>
        <th>Surname</th>
        <th>Employment date</th>
        <th>Job</th>
        <th>Company Form</th>
        <th>Company Title</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Job)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.LegalForm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Title)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Companies", "CompaniesList", "Company")
</p>
